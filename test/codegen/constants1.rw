// RUN: %remniw -emit-llvm %s -o %t ; echo 1 2 3 4 | lli %t | FileCheck %s
// RUN: %remniw -emit-llvm %s -o %t -debug ; echo 1 2 3 4 | lli %t | FileCheck %s
// RUN: %remniw -emit-llvm %s -o %t1 ; %remniw-llc %t1 -o %t2.s ; clang %t2.s -o %t3; echo 1 2 3 4 | %t3 | FileCheck %s
// RUN: %remniw %s -o %t4 ; echo 1 2 3 4 | %t4 | FileCheck %s

func f(a int, b int) int {
    return 5*a + 7*b;
}

func main() int {
    var x,y,z,n int;

    x=12;
    y=17;
    z=8;

    n=4;
    z = 3*(x+y-z) + 5 - 17; // z = 9
    while (n > 0){
        x = f(y,z);
        y = x * %input;
        n=n-1;
    }
    z = 3*(x+y-z) + 5 - 16;
    %output z;
    return 0;
}

