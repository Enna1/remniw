// RUN: %remniw %s -o %t ; echo 2 | lli %t | FileCheck %s
// RUN: %remniw %s -o %t -debug ; echo 2 | lli %t | FileCheck %s
// RUN: %remniw %s -o %t1 ; %remniw-llc %t1 -o %t2.s ; clang %t2.s -o %t3; echo 2 | %t3 | FileCheck %s

func foo(m int) int {
    m = m * 2;
    return m;
}

func main() int{
    var x,y,i,j,k int;
    y = %input;
    x = foo(y);
    i = x;
    j = y;
    while (i > 0) {
        y = y * y;
        i = i - 1;
    }
    while (j > 0) {
        x = x * x;
        j = j - 1;
    }
    if (x > 0) {
        x = 0 - x;
    } else {
        x = x + 1;
    }
    %output x;
    return 0;
}

