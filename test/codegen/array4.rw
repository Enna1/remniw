// RUN: %remniw %s -o %t ; lli %t | FileCheck %s
// RUN: %remniw %s -o %t -debug ; lli %t | FileCheck %s
// RUN: %remniw %s -o %t1 ; %remniw-llc %t1 -o %t2.s ; clang %t2.s -o %t3; %t3 | FileCheck %s

func fib(n int) int {
    var result int;

    if (n > 1){
        result = fib(n-1) + fib(n-2);
    } else {
        result = 1;
    }

    return result;
}

func succ(i int) int {
    return i + 1;
}

func main() int {
    var array[6] func(int) int;
    var n int;

    n = 6;
    array[0] = fib;
    array[1] = succ;

    while (n > 0) {
        %output array[0](n);
        %output array[1](n);
        n = n - 1;
    }

    return 0;
}

