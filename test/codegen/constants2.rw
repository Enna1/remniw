// RUN: %remniw -emit-llvm %s -o %t ; echo 1234 | lli %t | FileCheck %s
// RUN: %remniw -emit-llvm %s -o %t -debug ; echo 1234 | lli %t | FileCheck %s
// RUN: %remniw -emit-llvm %s -o %t1 ; %remniw-llc %t1 -o %t2.s ; clang %t2.s -o %t3; echo 1234 | %t3 | FileCheck %s
// RUN: %remniw %s -o %t4 ; echo 1234 | %t4 | FileCheck %s

func main() int {
    var x,y,z int;
    x = 27;
    y = %input;
    z = 2*x+y;
    if (0 > x){
        y = z-3;
    } else {
        y = 12;
    }
    %output y;
    return 0;
}

// CHECK: 12
