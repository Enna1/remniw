// RUN: %remniw %s -o %t ; echo 1 | lli %t | FileCheck %s
// RUN: %remniw %s -o %t -debug ; echo 1 | lli %t | FileCheck %s
// RUN: %remniw %s -o %t1 ; %remniw-llc %t1 -o %t2.s ; clang %t2.s -o %t3; echo 1 | %t3 | FileCheck %s

func main() int {
   var x,y,z int;
   x = %input;
   while (x>1) {
      y = x/2;
      if (y>3){
         x = x-y;
      }
      z = x-4;
      if (z>0){
         x = x/2;
      }
      z = z-1;
   }
   %output x;
   return 0;
}

// CHECK: 1
