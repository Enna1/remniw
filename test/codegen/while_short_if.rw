// RUN: %remniw %s -o %t ; echo 1 0 1 | lli %t | FileCheck %s
// RUN: %remniw %s -o %t -debug ; echo 1 0 1 | lli %t | FileCheck %s
// RUN: %remniw %s -o %t1 ; %remniw-llc %t1 -o %t2.s ; clang %t2.s -o %t3; echo 1 0 1 | %t3 | FileCheck %s

func main() int {
    var x,y,z int;
    x = %input;
    y = %input;
    z = %input;
    if (x == 1) {
        while (x > 0) {
            if (y == 0) {
                %output z;
            }
            else {
                x = %input;
            }
            x = x - 1;
        }
    }
    return 0;
}

// CHECK: 1
