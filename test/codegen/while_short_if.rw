// Emit LLVM IR
// RUN: %remniw -emit-llvm %s -o %t1 ; echo 1 0 1 | lli %t1 | FileCheck %s

// Emit X86 assembly
// RUN: %remniw-llc %t1 -o %t2.s ; clang %t2.s -o %t3; echo 1 0 1 | %t3 | FileCheck %s
// RUN: %remniw %s -o %t4 ; echo 1 0 1 | %t4 | FileCheck %

// Emit RISCV assembly
// RUN: %remniw-llc --target=riscv %t1 -o %t2.riscv.s ; \
// RUN:     %riscv-cc %t2.riscv.s -o %t3.riscv.exe; \
// RUN:     echo 1 0 1 | qemu-riscv64 %t3.riscv.exe | FileCheck %ss

func main() int {
    var x,y,z int;
    x = %input;
    y = %input;
    z = %input;
    if (x == 1) {
        while (x > 0) {
            if (y == 0) {
                %output z;
            }
            else {
                x = %input;
            }
            x = x - 1;
        }
    }
    return 0;
}

// CHECK: 1
