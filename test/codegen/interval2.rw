// RUN: %remniw %s -o %t ; lli %t | FileCheck %s
// RUN: %remniw %s -o %t -debug ; lli %t | FileCheck %s
// RUN: %remniw %s -o %t1 ; %remniw-llc %t1 -o %t2.s ; clang %t2.s -o %t3; %t3 | FileCheck %s

func main() int {
    var x,y,z int;
    z=1;
    x = 0;
    y = 0;

    if(x>0){
        x=x-8;
    } else {
        x=x+7; // x = 7
    }

    if(y>0){
        y=y-8;
    } else {
        y=y-7; // y = -7
    }

    z=x*y; // z = -49

    output x;
    output y;
    output z;

    return 0;
}

// CHECK: 7
// CHECK-NEXT: -7
// CHECK-NEXT: -49
